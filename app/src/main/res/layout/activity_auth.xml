<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/dark_grey"
    app:layout_collapseParallaxMultiplier="1.0">

    <Button
        android:id="@+id/authenticateButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:background="@color/orange"
        android:text="@string/authenticate_text" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/authenticateButton"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/passHint"
        android:inputType="textPassword"

        android:textColor="@color/white"
        android:textColorHighlight="@color/orange"
        android:textColorHint="@color/white"
        android:textColorLink="@color/orange"

        />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/passwordEditText"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/emailHint"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHighlight="@color/orange"
        android:textColorHint="@color/white"
        android:textColorLink="@color/orange"
/>
    <ImageView
        android:id="@+id/gitlab_icon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@id/emailEditText"
        android:layout_centerInParent="true"
        android:src="@drawable/gitlab2" />


</RelativeLayout>
